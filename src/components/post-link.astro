---
type Props = {
  id: string;
  title: string;
  published_at: string;
  abstract: string;
};

const { title, published_at, abstract, id } = Astro.props as Props;

const createAtDate = new Date(published_at);
const formatter = new Intl.DateTimeFormat(undefined, {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<div class="flex flex-col gap-1.5 mt-6 mb-6">
  <a href={`/posts/${id}`} class="text-2xl font-bold block italic">{title}</a>
  <time datetime={published_at} class="block text-base-600">
    {formatter.format(createAtDate)}
  </time>
  <div>{abstract}</div>
  <a
    href={`/posts/${id}`}
    class="text-blue-600 hover:underline hover:underline-offset-2 hover:decoration-2"
    >Read more</a
  >
</div>
